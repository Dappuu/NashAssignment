@using Microsoft.AspNetCore.Mvc

@if (User.Identity is not null && User.Identity.IsAuthenticated)
{
    <a class="nav-link" href="#"><i class="fas fa-user"></i></a>

    <form id="logout-form" asp-controller="Account" asp-action="Logout" method="post" style="display: none;"></form>
    <a class="nav-link" href="javascript:void(0);" onclick="document.getElementById('logout-form').submit();"><i class="fas fa-sign-out-alt"></i></a>
}
else
{
    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
    <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
}
