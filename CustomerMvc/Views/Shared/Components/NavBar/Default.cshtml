@using ViewModels.Category
@model List<CategoryDto>

<!-- header -->
<div class="top-header-area" id="sticker">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-sm-12 text-center">
				<div class="main-menu-wrap">
					<!-- logo -->
					<div class="site-logo">
						<a asp-action="Index" asp-controller="Home">
							@* <img src="assets/img/logo.png" alt=""> *@
							<b style="color: wheat; font-size:32px">PANDORA</b>
						</a>
					</div>
					<!-- logo -->
					<!-- menu start -->
					<nav class="main-menu">
						<ul>
							<li><a asp-action="Index" asp-controller="Home">Home</a></li>
							<li>
								<a href="#">Cart</a>
								<ul class="sub-menu">
									<li><a href="checkout.html">Check Out</a></li>
								</ul>
							</li>
							@* <li><a href="contact.html">Product</a></li> *@
							<li>
								<a asp-controller="Category" asp-action="index">Category</a>
								<ul class="sub-menu">
									@foreach(CategoryDto categoryDto in Model)
									{
										@if(categoryDto.SubCategoriesDto is not null)
										{
											<li>
												<a asp-controller="Category" asp-action="CategoryDetail" asp-route-id="@categoryDto.Id">@categoryDto.Name</a>
												@foreach (CategoryDto subDto in categoryDto.SubCategoriesDto)
												{
												<li><a asp-controller="Category" asp-action="CategoryDetail" asp-route-id="@subDto.Id">@subDto.Name</a></li>
												}
												<br />
											</li>
										}
									}
								</ul>
							</li>
							<li>
								<div class="header-icons">
									<a class="shopping-cart" href="cart.html"><i class="fas fa-shopping-cart"></i></a>
									<a class="mobile-hide search-bar-icon" href="#"><i class="fas fa-search"></i></a>
									<partial name="_LoginPartial" />
								</div>
							</li>

						</ul>
					</nav>
					<a class="mobile-show search-bar-icon" href="#"><i class="fas fa-search"></i></a>
					<div class="mobile-menu"></div>
					<!-- menu end -->
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end header -->
<!-- search area -->
<div class="search-area">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<span class="close-btn"><i class="fas fa-window-close"></i></span>
				<div class="search-bar">
					<div class="search-bar-tablecell">
						<h3>Search For:</h3>
						<input type="text" placeholder="Keywords">
						<button type="submit">Search <i class="fas fa-search"></i></button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end search area -->