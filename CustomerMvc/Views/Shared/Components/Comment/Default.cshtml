@using ViewModels.Comment
@model List<CommentDto>

<div class="comments-list-wrap">
	<h3 class="comment-count-title">@Model.Count Comments</h3>
	<div class="comment-list">
		@foreach(var commentDto in Model)
		{
			<div class="single-comment-body">
				<div class="comment-user-avater">
					<img src="assets/img/avaters/avatar1.png" alt="">
				</div>
				<div class="comment-text-body">
					<h4>@commentDto.UserName<span class="comment-date">@commentDto.CreatedDate.ToString("MMMM dd, yyyy");</span> <span> @commentDto.Rating.ToString("n1") <i class="fas fa-star" style="color:khaki"></i></span></h4>
					<p>@commentDto.Content</p>
				</div>
			</div>
		}
	</div>
</div>